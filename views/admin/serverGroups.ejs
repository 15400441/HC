<body>
	<div id="wrapper">
		<%- include ../nav.ejs %>
		<div id="page-wrapper">
			<div class="container-fluid">

                <div class="row">
						<div class="col-lg-12">
							<h1 class="page-header">Server Groups</h1>
						</div>
				</div>

				<div class="row">
				   <div class="col-lg-12">
					<div class="form-group">
						<form action="/serverGroups" id="searchForm" method="get">
							 <input name="name" type="text" value="" class="form-control" style="width:40%; display:inline" placeholder="name"> 
							 <input name="pageNum" id="pageNum" type="hidden" value=""> 
							 <input id="totalPages" type="hidden">
							<button type="submit" class="btn btn-primary">Search</button>
						    <a  class="btn btn-primary" href="javascript:editModal('add')" >Add</a>
						</form>
					</div>
					</div>
				</div>


				<div class="row">
						<div class="col-lg-12">
							
							<div class="table-responsive">
								<table class="table table-bordered table-hover table-striped">
									<thead>
										<tr>
											<th>Name</th>
											<th>Update</th>
											<th>Delete</th>
										</tr>
									</thead>
									<tbody>
										  
										  <% if(typeof serverGroups!='undefined') {servers.forEach(function(serverGroup) { %>
  				  
											<tr>
												<td><%=serverGroup.name %></td>
												<td><a href="javascript:editModal('update')">update</a></td>
							                    <td><a href="">delete</a></td>
											</tr>	
																								
										 <% });} %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
<!-- /.row -->




			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /#page-wrapper -->
	</div>
	<!-- /#wrapper -->

