<link href="/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet">
<link href="/assets/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
</head>
<body>
	<div id="wrapper">
		<%- include nav.ejs %>
		<div id="page-wrapper">
			<div class="container-fluid">

                <div class="row">
						<div class="col-lg-12">
							<h1 class="page-header">Alerts</h1>
						</div>
				</div>

				<div class="row">
				   <div class="col-lg-12">
					<div class="form-group">
						<form action="/alerts" id="searchForm" method="get">
							<select class="form-control" name="type" style="width:20%; display:inline" >
							  <option value=""> alert type </option>
							</select>
							<select class="form-control" name="serviceGroupID" style="width:20%; display:inline" >
							  <option value=""> service group </option>
							</select>
							<select class="form-control" name="serverID" style="width:20%; display:inline" >
							  <option value=""> server </option>
							</select>
							<select class="form-control" name="marketID" style="width:20%; display:inline" >
							  <option value=""> market </option>
							</select>
							<br />
							<br />
							 <input name="serviceName" type="text" value="" class="form-control" style="width:20%; display:inline" placeholder="service name"> 
				
							 <input name="startTime" id="startTime" type="text" value="" class="form-control" style="width:20%; display:inline" placeholder="start time">
							 <input name="endTime" id="endTime" type="text" value="" class="form-control" style="width:20%; display:inline" placeholder="end time">
														
							 <input name="pageNum" id="pageNum" type="hidden" value=""> 
							 <input id="totalPages" type="hidden">
							<button type="submit" class="btn btn-primary">Search</button>
						
						</form>
					</div>
					</div>
				</div>


                <br />
                <div class="row">
                  <div class="col-lg-12">
					  <!-- Nav tabs -->
					  <ul class="nav nav-tabs" role="tablist">
					    <li role="presentation" class="active"><a href="#service" aria-controls="service" role="tab" data-toggle="tab">Service</a></li>
					    <li role="presentation"><a href="#server" aria-controls="server" role="tab" data-toggle="tab">Server</a></li>
					  </ul>

					  <!-- Tab panes -->
					  <div class="tab-content">
					    <div role="tabpanel" class="tab-pane active" id="service">
					    	<div class="row">
									<div class="col-lg-12">
										
										<div class="table-responsive">
											<table class="table table-bordered table-hover table-striped">
												<thead>
													<tr>
														<th>Alert Type</th>
														<th>Service Name</th>
														<th>Server Name</th>
														<th>Market</th>
														<th>Time</th>
														<th>Description</th>
														<th>Handle Activity</th>
													</tr>
												</thead>
												<tbody>
													  
													  <% if(typeof alertViews!='undefined') {alertViews.forEach(function(alertView) { %>
			  				  
														<tr>
															<td><%=alertView.alertType %></td>
															<td><%=alertView.serviceName %></td>
															<td><%=alertView.serverName %></td>
															<td><%=alertView.marketName %></td>
															<td><%=alertView.time %></td>
															<td><%=alertView.desc %></td>
															<td><a href="/activity/id">activity</a></td>
															
															
											          </tr>
													 <% });} %>
												</tbody>
											</table>
										</div>
									</div>
								</div>
					    </div>



					    <div role="tabpanel" class="tab-pane" id="server">
					         <div class="row">
									<div class="col-lg-12">
										
										<div class="table-responsive">
											<table class="table table-bordered table-hover table-striped">
												<thead>
													<tr>
														<th>Alert Type</th>
														
														<th>Server Name</th>
														<th>Market</th>
														<th>Time</th>
														<th>Description</th>
														<th>Handle Activity</th>
													</tr>
												</thead>
												<tbody>
													  
													  <% if(typeof alertViews!='undefined') {alertViews.forEach(function(alertView) { %>
			  				  
														<tr>
															<td><%=alertView.alertType %></td>
															
															<td><%=alertView.serverName %></td>
															<td><%=alertView.marketName %></td>
															<td><%=alertView.time %></td>
															<td><%=alertView.desc %></td>
															<td><a href="javascript:showModal()">activity</a></td>
															
															
											          </tr>
													 <% });} %>
												</tbody>
											</table>
										</div>
									</div>
								</div>
					    	
					    </div>
					  </div>
                    </div>
				</div>
               

<a href="javascript:showModal()">activity</a>
<div class="modal fade " role="dialog" id="activityDetail">
	<div class="modal-dialog  " role="document">
		<div class="modal-content ">
			<div class="modal-header" style="background-color:#4ddbff">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">Ã—</span>
				</button>
				<h4 class="modal-title">Activity Detail</h4>
			</div>
			<div class="modal-body">
				<div class="row">
				   <div class="col-md-6">Activity type:</div>
		           <div class ="col-md-6">User:</div>
					
				</div>
				<div class ="row">
					<div class ="col-md-6">Occur time:</div>
		            <div class ="col-md-6">Pause time:</div>
				</div>
               
				<div class ="row">
					<div class ="col-md-6">Description:</div>
                    
				</div>
				<div class ="row">
					
                    <div class ="col-md-12"> <textarea class="form-control" rows="5"></textarea>  </div>
				</div>

 
		
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
				
			</div>
		</div>
	</div>
</div>



			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /#page-wrapper -->
	</div>
	<!-- /#wrapper -->
</body>
<script src="/assets/js/jquery.js"></script>
<script src="/assets/js/bootstrap.min.js"></script>
<script src="/assets/js/jqPaginator.js"></script>
<script src="/assets/js/metisMenu.min.js"></script>
<script src="/assets/js/sb-admin-2.js"></script>
<script src="/assets/js/bootstrap-datetimepicker.min.js"></script>
<script type="text/javascript">

function initialTimePicker()
{
	$('#startTime').datetimepicker({
	    format: 'yyyy-mm-dd ',
	    todayBtn :true,
	    minView :2,
	    autoclose: true
	});

	$('#endTime').datetimepicker({
	    format: 'yyyy-mm-dd ',
	    todayBtn :true,
	    minView :2,
	    autoclose: true
	});
	
}

initialTimePicker();


function showModal()
{
	//get activity content, set value
	$('#activityDetail').modal("show");
}

	
	
</script>
</html>
