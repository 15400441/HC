<script type="text/javascript">
	
function initialTimePicker()
{
	$('#startTime').datetimepicker({
	    format: 'yyyy-mm-dd ',
	    todayBtn :true,
	    minView :2,
	    autoclose: true
	});

	$('#endTime').datetimepicker({
	    format: 'yyyy-mm-dd ',
	    todayBtn :true,
	    minView :2,
	    autoclose: true
	});
	
};

initialTimePicker();
	
</script>
