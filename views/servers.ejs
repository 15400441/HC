
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="">
<title>HealthCheck</title>
<!-- Bootstrap Core CSS -->
<link href="/assets/css/bootstrap.min.css" rel="stylesheet">
<!-- MetisMenu CSS -->
<link href="/assets/css/metisMenu.min.css" rel="stylesheet">
<!-- Timeline CSS -->
<link href="/assets/css/timeline.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="/assets/css/sb-admin-2.css" rel="stylesheet">
<!-- Morris Charts CSS -->
<link href="/assets/css/plugins/morris.css" rel="stylesheet">
<!-- Custom Fonts -->
<link href="/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
	<div id="wrapper">
		<%- include nav.ejs %>
		<div id="page-wrapper">
			<div class="container-fluid">

                <div class="row">
						<div class="col-lg-12">
							<h1 class="page-header">Servers</h1>
						</div>
				</div>

				<div class="row">
				   <div class="col-lg-12">
					<div class="form-group">
						<form action="/servers" id="searchForm" method="get">
							 <input name="name" type="text" value="" class="form-control" style="width:40%; display:inline" placeholder="name"> 
							 <input name="pageNum" id="pageNum" type="hidden" value=""> 
							 <input id="totalPages" type="hidden">
							<button type="submit" class="btn btn-primary">Search</button>
						
						</form>
					</div>
					</div>
				</div>


				<div class="row">
						<div class="col-lg-12">
							
							<div class="table-responsive">
								<table class="table table-bordered table-hover table-striped">
									<thead>
										<tr>
											<th>Name</th>
											<th>IP</th>
											<th>Serverload</th>
											<th>Disk Usage</th>
											<th>Tempetature</th>
											<th>Address</th>
										</tr>
									</thead>
									<tbody>
										  
										  <% if(typeof servers!='undefined') {services.forEach(function(server) { %>
  				  
											<tr>
												<td><%=server.name %></td>
												<td><%=server.ip %></td>
												<td><%=server.serverLoad %></td>
												<td><%=server.diskUsage %></td>
												<td><%=server.temperature %></td>
												<td><%=server.address %></td>
											</tr>	
																								
										 <% });} %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
<!-- /.row -->




			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /#page-wrapper -->
	</div>
	<!-- /#wrapper -->
</body>
<script src="/assets/js/jquery.js"></script>
<script src="/assets/js/bootstrap.min.js"></script>
<script src="/assets/js/jqPaginator.js"></script>
